{
  "include": [
    "src/**/*",
    "src/**/*.json",
    "src/**/*.txt",
    "src/templates/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2021",
      "ES2015",
      "DOM",
      "ESNext"
    ],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}